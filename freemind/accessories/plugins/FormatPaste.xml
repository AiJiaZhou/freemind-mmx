<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<plugin>
	<plugin_action 
		documentation="&lt;html&gt;Copies the format of a node.&lt;/html&gt;" 
		name="Copy format" key_stroke="alt C" 
		base="freemind.extensions.NodeHookAdapter" 
		icon_path="accessories/plugins/icons/colorpicker.png" 
		label="accessories/plugins/FormatCopy.properties" 
		class_name="accessories.plugins.FormatPaste"
		instanciation="Other">
		<plugin_mode class_name="freemind.modes.mindmapmode"/>
		<plugin_menu location="menu_bar/edit/paste/copyFormat"/>
		<plugin_property value="copy_format" name="actionType"/>
	</plugin_action>
	<plugin_action 
		documentation="&lt;html&gt;Pastes the format of a node.&lt;/html&gt;" 
		name="Paste format" key_stroke="alt V" 
		base="freemind.extensions.NodeHookAdapter" 
		icon_path="accessories/plugins/icons/color_fill.png" 
		label="accessories/plugins/FormatPaste.properties" 
		class_name="accessories.plugins.FormatPaste"
		instanciation="Other">
		<plugin_mode class_name="freemind.modes.mindmapmode"/>
		<plugin_menu location="menu_bar/edit/paste/pasteFormat"/>
		<plugin_property value="paste_format" name="actionType"/>
	</plugin_action>
</plugin>