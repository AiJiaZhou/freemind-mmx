<project name="freemind" default="dist" basedir=".">
	<property name="src" value="." />
	<property name="build" value="build" />
	<property name="dist" value="dist" />


	<target name="compile">
		<mkdir dir="${build}"/>
		<javac	srcdir="${src}"
			destdir="${build}"
			classpath="xerces.jar:w3cdom1.jar"
		        debug="on"/>
	</target>

	<target name="dist" depends="jar">
		<copy todir="${dist}"> 
			<fileset dir="${src}"
				includes="**/*.properties,**/freemind.bat,**/freemind.sh"
			/>
		</copy>
		<copy todir="${dist}/lib">
			<fileset dir="${src}"
				includes="**/silk.jar"
			/>
		</copy>
	</target>

	<target name="jar" depends="compile">
		<mkdir dir="${dist}/lib" />
		<jar jarfile="${dist}/lib/freemind.jar"
		     manifest="${src}/MANIFEST.MF">
			<fileset dir="${build}"/>
			<fileset dir="${src}">
				<include name="images/*"/>
				<include name="*.properties"/>
			</fileset>
		</jar>
	</target>

	<target name="browser" depends="compile">
		<mkdir dir="${dist}/browser" />
		<jar jarfile="${dist}/browser/freemindbrowser.jar">
			<fileset dir="${build}">
				<include name="freemind/view/*"/>
				<include name="freemind/view/mindmapview/*"/>
				<include name="freemind/main/*"/>
				<include name="freemind/controller/*"/>	
				<include name="freemind/modes/*"/>
				<include name="freemind/modes/browsemode/*"/>
			</fileset>
			<fileset dir="${src}">
				<include name="images/Back24.gif"/>
				<include name="images/Forward24.gif"/>
				<include name="*.properties"/>
			</fileset>
		</jar>
		<copy todir="${dist}/browser" >
			<fileset dir="${src}/html">
				<include name="freemindbrowser.html"/>
			</fileset>
		</copy>
	</target>

	<target name="doc">
		<mkdir dir="${dist}/doc" />
		<copy todir="${dist}/doc/">
			<fileset dir="${src}/doc"/>
		</copy>
		<javadoc sourcepath="${src}/.."
		         destdir="${dist}/doc"
		         packagenames="freemind.*" />
	</target>

	<target name="clean">
		<delete dir="${build}" />
		<delete dir="${dist}" />
	</target>
</project>
